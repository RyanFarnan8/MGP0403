{% extends 'base.html.twig' %}

{% block title %}Timeslots index{% endblock %}

{% block body %}
    <h1>Timeslots index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Timeslots</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for timeslot in timeslots %}
            <tr>
                <td>{{ timeslot.id }}</td>
                <td>{{ timeslot.timeslots }}</td>
                <td>
                    <a href="{{ path('timeslots_show', {'id': timeslot.id}) }}">show</a>
                    <a href="{{ path('timeslots_edit', {'id': timeslot.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('timeslots_new') }}">Create new</a>
{% endblock %}
