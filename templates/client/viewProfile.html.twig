{% extends 'base.html.twig' %}

{% block title %}My Profile{% endblock %}

{% block body %}
    <h3>Your Profile Details</h3>
    <p>Your Profile Email: {{ app.user }}</p>
    <p>Your Profile ID: #{{ app.user.id }}</p>
    <p>Your Profile Role: {{ app.user.role }}</p>



    <div>
        <div>
            <button class="button">

                <a href="{{ path('default') }}">Back</a>
            </button>
        </div>
    </div>


    <style>
        a {
            text-decoration: none;

            display: inline-block;
            padding: 8px 16px;
        }
        .button {
            position: absolute;
            bottom: 10px;
            left: 10%;
            margin-left: -104.5px; /*104.5px is half of the button's width*/
        }



    </style>



{% endblock %}
