{% extends 'base.html.twig' %}

{% block title %}Plumbing Page{% endblock %}

{% block body %}




    <h3>Here is a list of Plumbing Jobs </h3>
    <table>
        <thead>
        <tr>

            <th>Creator</th>
            <th>Contact</th>
            <th>Trade</th>
            <th>Description</th>
            <th>County</th>
            <th>Location</th>
            <th>Timeslot</th>
        </tr>
        </thead>
        <tbody>{% for job in jobs%}
            {% if job.trade == 'Plumbing' %}

            <td>{{ job.creator}}</td>
            <td>{{ job.contact}}</td>
            <td>{{ job.trade }}</td>
            <td>{{ job.description }}</td>
            <td>{{ job.county }}</td>
            <td>{{ job.location }}</td>
            <td>{{ job.timeslot }}</td>


{% endif %}
        {% endfor %}</tbody>


    </table>

    <br>
    <br>
    <a href="{{ path('job_new') }}">
        <button type="button">Post A Job</button></a>

{% endblock %}
