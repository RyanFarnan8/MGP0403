{% extends 'base.html.twig' %}

{% block title %}Job index{% endblock %}

{% block body %}
    <h1>All Available Jobs</h1>

    <p>To make things easier, you can search jobs based on their county!</p>
    <form method="post" action="{{ url("search_county") }}">

        <input name="county">
        <input type="submit">
    </form>
    <br>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contact</th>
                <th>Trade</th>
                <th>Description</th>
                <th>Location</th>
                <th>County</th>
                <th>Creator</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td>{{ job.id }}</td>
                <td>{{ job.contact }}</td>
                <td>{{ job.trade }}</td>
                <td>{{ job.description }}</td>
                <td>{{ job.location }}</td>
                <td>{{ job.county }}</td>
                <td>{{ job.creator }}</td>
                <td>
                    <a href="{{ path('job_show', {'id': job.id}) }}">show</a>
                    <a href="{{ path('job_edit', {'id': job.id}) }}">edit</a>
                    <a href="{{ path('job_completed', {'id': job.id}) }}">Completed</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
