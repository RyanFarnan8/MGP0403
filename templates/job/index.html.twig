{% extends 'base.html.twig' %}

{% block title %}Job index{% endblock %}

{% block body %}
    <h1>Job index</h1>
    <hr>
    {% if search_text is defined %}
You typed in: {{search_text}}
    {% endif %}
    <form method="post" action="{{ url("search_county") }}">

        <input name="county">
        <input type="submit">
    </form>
    <hr>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contact</th>
                <th>Trade</th>
                <th>Location</th>
                <th>County</th>
                <th>Description</th>
                <th>Timeslot</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td>{{ job.id }}</td>
                <td>{{ job.contact }}</td>
                <td>{{ job.trade }}</td>
                <td>{{ job.location }}</td>
                <td>{{ job.county }}</td>
                <td>{{ job.description }}</td>
                <td>{{ job.timeslot }}</td>

                <td>
                    <a href="{{ path('job_show', {'id': job.id}) }}">show</a>
                    <a href="{{ path('job_edit', {'id': job.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('job_new') }}">Create new</a>
{% endblock %}
